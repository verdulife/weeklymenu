---
interface Props {
  day: string;
  meals: Array<{
    type: string;
    name: string;
    ingredients: Array<string>;
  }>;
}

const { day, meals } = Astro.props;
---

<section
  class="flex flex-col gap-2 rounded-lg border border-gray-700 bg-gray-900 p-4 shadow shadow-black"
>
  <h4 class="text-lg font-bold text-gray-400">{day}</h4>
  {
    meals.map(({ type, name, ingredients }) => (
      <div class="flex flex-col">
        <span class="text-sm capitalize text-gray-400">{type}</span>
        <details>
          <summary class="rounded-lg bg-gray-700 p-2 text-sm text-gray-100">
            {name}
          </summary>
          <ul class="list-disc pl-4 text-gray-400">
            {ingredients.map((ingredient) => (
              <li>
                <p class="text-sm capitalize">{ingredient}</p>
              </li>
            ))}
          </ul>
        </details>
      </div>
    ))
  }
</section>
